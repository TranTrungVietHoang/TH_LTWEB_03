@model TH_LTWEB_03.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body bg-gradient-primary text-white text-center py-4">
                    <h2 class="mb-2 fw-bold">
                        <i class="fas fa-folder-plus me-2"></i>@ViewData["Title"]
                    </h2>
                    <p class="mb-0 opacity-75">Tạo danh mục mới để phân loại sản phẩm</p>
                </div>
            </div>

            <!-- Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold fs-5">
                                <i class="fas fa-tag me-2 text-primary"></i>Tên Danh Mục
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg border-2"
                                   placeholder="Nhập tên danh mục..." />
                            <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn btn-primary btn-lg px-4 flex-fill">
                                <i class="fas fa-save me-2"></i>Thêm Danh Mục
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}