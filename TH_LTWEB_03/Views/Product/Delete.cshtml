@{
}

@model TH_LTWEB_03.Models.Product
<h2>Delete Product</h2>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
                        <h2 class="fw-bold mb-3">Xác nhận xóa sản phẩm</h2>
                        <p class="text-muted mb-4">
                            Bạn có chắc chắn muốn xóa sản phẩm <strong class="text-danger">@Model.Name</strong>?
                        </p>
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            Hành động này không thể hoàn tác!
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 justify-content-center">
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="fas fa-trash me-2"></i>Xóa sản phẩm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>